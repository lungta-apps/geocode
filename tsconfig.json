{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"],
      "@assets/*": ["./attached_assets/*"]
    },
    "types": ["node"]
  },
  "include": ["api/**/*.js", "shared", "client", "server", "vite.config.ts"],
  "exclude": ["api/**/*.ts"]
}
