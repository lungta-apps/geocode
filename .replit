hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-24_05"
packages = ["gcc", "gitFull", "glibc", "libstdcxx5", "playwright", "playwright-driver", "python3", "xcodebuild", "zlib", "nss", "nspr", "dbus", "atk", "cups", "expat", "xorg.libxcb", "xorg.libXcomposite", "xorg.libXdamage", "xorg.libXfixes", "mesa", "cairo", "pango", "systemd", "libxkbcommon", "alsa-lib", "gcc-unwrapped", "xorg.libXrandr", "xorg.libXext", "xorg.libXi", "xorg.libXtst", "gtk3", "libdrm"]

[deployment]
deploymentTarget = "autoscale"
build = ["npm", "run", "build"]
